<form action="/urlShorteners/{{url._id}}?_method=PUT" method="POST">
  <div>
    <div class="d-flex justify-content-around mb-3">
      <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
           class="mb-2" style="width: 25%;">
    </div>
    <p class="d-flex justify-content-center mb-3">{{url.shortDst}}</p>
    <div class="d-flex justify-content-center mb-3">
      <input type="text" placeholder="source url" id="src" name="src" class="form-control" style="width:50%"
             value="{{url.src}}">
    </div>
    <div class="d-flex justify-content-around">
      <button type="submit" id="btnSubmint" class="btn btn-success">Edit</button>
    </div>
  </div>
</form>